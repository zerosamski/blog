<% include partials/headerloggedin %> 

<div class="formedits">
  <form action='blogs/new' method="POST">
    <p> Create something today!</p>
    
    <div class="field">
      <label class="label">
        Title
      </label>
      <div class="control">
        <input class="input" type="text" name="title" required>
      </div>
    </div>

    <div class="field">
      <label class="label">
        Content
      </label>
      <div class="control">
        <textarea class="textarea" rows="10" name="body" required> </textarea>
      </div>
    </div>

    <div class="control">
        <button class="button is-link">Submit</button>
    </div>
    
  </form>
</div>

