<% include partials/headerloggedin %> 

<div class="formedits">
  <form action='/blogs/new' method="POST">
    <p> 
        Create something today!
    </p>
    <div class="field">
        <label class="label">
            Title
        </label>
        <div class="control">
            <input id="target" class="input" type="text" name="title" maxlength="25" required>
            <p id="length"></p>
            <p id="message"><%= warningtitle %></p>
        </div>
    </div>

    <div class="field">
        <label class="label">
            Content
        </label>
        <div class="control">
            <textarea class="textarea" rows="10" name="body" required></textarea>
        </div>
    </div>

    <div class="control">
        <button class="button is-link">Submit</button>
    </div>
    
  </form>
</div>

<script>
$("#target").keyup(function () {
	title = $(this).val();
    if (title.length <=20) {
    $("#length").html(`Characters left: ${25 - title.length}`) 
    $("#length").css("color", "rgba(64, 38, 36, 0.6)")     
    } else if (title.length > 20 && title.length <= 25) {
        $("#length").html(`Characters left: ${25 - title.length}`) 
        $("#length").css("color", "red")   
    }
})
</script>

