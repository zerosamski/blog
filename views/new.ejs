<% include partials/headerloggedin %> 

<script
  src="https://code.jquery.com/jquery-3.2.1.min.js"></script>

<div class="formedits">
  <form action='/blogs/new' method="POST">
    <p> Create something today!</p>
    
    <div class="field">
      <label class="label">
        Title
      </label>
      <div class="control">
        <input id="target" class="input" type="text" name="title" maxlength="25" required>
        <p id="titlelength"></p>
      </div>
    </div>

    <div class="field">
      <label class="label">
        Content
      </label>
      <div class="control">
        <textarea class="textarea" rows="10" name="body" required></textarea>
      </div>
    </div>

    <div class="control">
        <button class="button is-link">Submit</button>
    </div>
    
  </form>
</div>

<script>
$("#target").keyup(function () {
	title = $(this).val();
    console.log(title)
    if (title.length <=20) {
    $("#titlelength").html(`Characters left: ${25 - title.length}`) 
    $("#titlelength").css("color", "rgba(64, 38, 36, 0.6)")     
    } else if (title.length > 20 && title.length <= 25) {
        $("#titlelength").html(`Characters left: ${25 - title.length}`) 
        $("#titlelength").css("color", "red")   
    }
})
</script>

