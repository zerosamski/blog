<% include partials/headerloggedin %>

<div class="formedits">
    <div class="left">
        <strong><%= foundBlog.title %></strong>
    </div>
    <div class="right">
        <% var array = JSON.stringify(foundBlog.createdAt) %>
        <% var newarray = "" %>
        <% for (var i = 1; i < 11; i++) { %>
            <% newarray += array[i]; %>
            <%console.log(newarray) %>
        <% } %>
        <%= newarray %>  
    </div>
    
    </br>

    <div class="by">
        by:  
        <% users.forEach(function(user) { %>
            <% if (user.id === foundBlog.userId) { %>
                <a class="link" href="/user/<%=user.id%>"> <%= user.firstName %> <%= user.lastName %></a>
            <%}%>
        <% }) %>
    </div>

    </br>

    <div class="blogtext">
        <%= foundBlog.body %>
    </div>

    <div class="comments">
        <em>Comments</em>
        <br>
        <% comments.forEach(function(comment) { %>
        
            <div>
                Comment by: 
                <% users.forEach(function(user) { %>
                    <% if (user.id === comment.userId) { %>
                        <a class="link" href="/user/<%=user.id%>"><%= user.firstName%> <%= user.lastName%></a>
                    <% } %>
                <% }) %>
                <br>
                <%=comment.comment%>
                <hr>
            </div>  

        <% }) %>
    
    </div>

    <form class ="leavecomment" action='/blogs/<%=foundBlog.id%>' method="POST">
        Leave a comment
    
        <div class="field">
            <div class="control">
                <textarea class="textarea" rows="2" name="comment" required></textarea>
            </div>
        </div>

        <div class="control">
            <button class="button is-link">Submit</button>
        </div>
    
    </form>
</div>

<% include partials/footer %>